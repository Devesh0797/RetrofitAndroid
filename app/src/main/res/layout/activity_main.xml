<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView android:textSize="20dp" android:textColor="#ffffff"
                android:id="@+id/id_phone" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="40dp" android:text="Email Id" android:layout_marginStart="20dp"/>
            <EditText
                android:id="@+id/et_emailid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" android:layout_marginRight="20dp"
                android:paddingLeft="5dp"
                android:hint="Email/Phone No."
                android:layout_below="@+id/id_phone"
                android:layout_centerHorizontal="true" android:inputType="textEmailAddress"/>
            <TextView android:textSize="20dp" android:textColor="#ffffff" android:id="@+id/password"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp"
                android:text="Password" android:layout_below="@+id/et_emailid"/>
            <EditText android:id="@+id/et_passwordid"
                android:paddingLeft="5dp"
                android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:hint="Password"
                android:layout_below="@+id/password" android:inputType="textPassword"/>
            <TextView android:textSize="20dp" android:textColor="#ffffff" android:id="@+id/name"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" android:text="Name" android:layout_below="@+id/et_passwordid" />
            <EditText android:id="@+id/et_nameid"
                android:layout_width="match_parent" android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp"
                android:hint="name" android:layout_below="@+id/name" />
            <TextView android:textSize="20dp" android:textColor="#ffffff" android:id="@+id/school"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" android:text="School" android:layout_below="@+id/et_nameid" />
            <EditText android:id="@+id/et_schoolid"
                android:layout_width="match_parent" android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp"
                android:hint="School name" android:layout_below="@+id/school"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@+id/et_schoolid"
                android:layout_marginTop="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:text="register"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@+id/btn_register"
                android:layout_marginTop="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:text="Login"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </ScrollView>
    <ProgressBar android:id="@+id/progressBar"
        android:visibility="invisible" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" style="?android:attr/progressBarStyle"/>

</RelativeLayout>